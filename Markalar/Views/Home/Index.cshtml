@model List<Markalar.Models.Marka>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        .newuser {
            float: right;
            cursor: pointer;
        }
    </style>
</head>
<body>
    
    <div class="container">
       

      
        
<a href="/Home/YeniMarka"class="newuser">+Yeni Marka Ekle</a>  



       
        <table class="table table-hover">
            <thead>

                
                <tr>
                    <th>ID</th>
                    <th>Firma Adı</th>
                    <th>Açıklaması</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.FirmaAdi</td>
                            <td>@item.Aciklamasi</td>
                            
                            <td><a href="/Home/Guncelle?ID=@item.ID">Guncelle</a> <a href="/Home/Delete?ID=@item.ID">Sil</a> </td>

                        </tr>

                    }


                }

          
           
            </tbody>
        </table>
    </div>

</body>
</html>
